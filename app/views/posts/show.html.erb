<div class="post">
	
	<p class="delete"><%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: 'Are you sure'} %> </p>
	<p class="edit"><%= link_to 'Edit Post', post_path(@post), method: :edit %> </p>

	<h1 class="title"><%= @post.title %></h1>
		
	<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> Ago</p>

	<br>
	
	<p class="body"><%= @post.body %></p>
</div>

	<hr>

<div class="post">
	<h2><%= pluralize(@post.comments.count,"Comment") %> </h2>
	
	<%= render @post.comments %>
</div>

<hr>

<div class="post">
	<h3>Add a comment:</h3>
	<%= render 'comments/form' %>
</div>
